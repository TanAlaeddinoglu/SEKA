# Docker image sources
BACKEND_IMAGE=ghcr.io/your-github-org/ambalaj-backend
FRONTEND_IMAGE=ghcr.io/your-github-org/ambalaj-frontend
IMAGE_TAG=latest

# Network bindings / paths
GATEWAY_PORT=18080
DB_PORT=5432
DB_DATA_PATH=/opt/data/postgres
MINIO_DATA_PATH=/opt/data/minio

# Postgres
POSTGRES_DB=ambalaj_db
POSTGRES_USER=crm_user
POSTGRES_PASSWORD=replace-with-strong-password

# MinIO
MINIO_ROOT_USER=replace-root-user
MINIO_ROOT_PASSWORD=replace-root-password
MINIO_ACCESS_KEY=replace-access-key
MINIO_SECRET_KEY=replace-secret-key
MINIO_BUCKET=product-images
MINIO_URL_EXPIRY_SECONDS=3600
MINIO_SERVER_URL=https://media.sekaticaret.com.tr
MINIO_BROWSER_REDIRECT_URL=https://console.sekaticaret.com.tr
MINIO_PUBLIC_ENDPOINT=https://media.sekaticaret.com.tr

# Backend
JWT_KEY=replace-with-long-random-base64-secret
APP_CORS_ALLOWED_ORIGINS=https://sekaticaret.com.tr,https://www.sekaticaret.com.tr
APP_BOOTSTRAP_ADMIN_ENABLED=false
APP_BOOTSTRAP_ADMIN_USERNAME=admin
APP_BOOTSTRAP_ADMIN_PASSWORD=replace-and-disable-after-first-login
APP_BOOTSTRAP_ADMIN_EMAIL=admin@example.com
APP_BOOTSTRAP_ADMIN_NAME=Admin
APP_BOOTSTRAP_ADMIN_SURNAME=Admin
SPRING_JPA_HIBERNATE_DDL_AUTO=update
